<h3>投稿詳細</h3>
<%= attachment_image_tag @post.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<%= @post.user.name %><br>
<%= @post.title %>
<p>カテゴリー：<%= @post.category.name %></p>
  <p>ジャンル：
    <% @post.genre_posts.each do |genre_post| %>
      <%= genre_post.genre.name %>
    <% end %>
  </p>
<%= @post.opinion %><br>
<% if @post.user.id == current_user.id %>
  <%= link_to "編集", edit_post_path(@post), class:"btn btn-info" %>
  <%= link_to "削除", post_path(@post), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
<% end %>